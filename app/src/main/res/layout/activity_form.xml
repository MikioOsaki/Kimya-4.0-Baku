<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mikio.kimya_3_0_Yevlakh.FormActivity">


    <TextView
        android:id="@+id/Anlage_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Anlage*"
        />

    <Spinner
        android:id="@+id/Anlage_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Anlage_label"/>

    <TextView
        android:id="@+id/Menge_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Menge*"
        android:layout_below="@id/Anlage_spinner"
        />


    <EditText
        android:id="@+id/editTextMenge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Menge_label"/>

    <TextView
    android:id="@+id/Einheit_label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/activity_vertical_margin"
    android:text="Einheit*"
        android:layout_below="@id/editTextMenge"
    />

    <Spinner
        android:id="@+id/Einheit_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Einheit_label"/>



    <Button
        android:id="@+id/buttonSpeichernAnlage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/speichern"
        android:layout_below="@id/Einheit_spinner"/>

<!--
    <ImageView
        android:id="@+id/imageViewMSolutions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/msolutions"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/buttonSpeichernAnlage"/>
-->

    <TextView
        android:id="@+id/textViewGBULabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSpeichernAnlage"
        android:text="GBU/BA"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editTextVerfahren"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/verfahren_t_tigkeit"
        android:layout_below="@+id/textViewGBULabel"/>

    <EditText
        android:id="@+id/editTextAnwendungsbereich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Anwendungsbereich"
        android:layout_below="@+id/editTextVerfahren"/>

    <TextView
        android:id="@+id/textViewSubstPruefung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAnwendungsbereich"
        android:text="SubstitutionsprÃ¼fung"
        android:textStyle="bold"/>


</RelativeLayout>
