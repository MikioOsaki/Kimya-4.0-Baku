<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mikio.kimya_3_0_Yevlakh.FormActivity">

    <TextView
        android:id="@+id/textViewFormName"
        style="@style/formkategorie"
        android:text="Anlagen Formular"/>
    <TextView
        android:id="@+id/Anlage_label"
        style="@style/formtextview"
        android:layout_below="@+id/textViewFormName"
        android:text="Anlage*"/>

    <Spinner
        android:id="@+id/Anlage_spinner"
        style="@style/formspinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Anlage_label" />

    <TextView
        android:id="@+id/Menge_label"
        style="@style/formtextview"
        android:text="Menge*"
        android:layout_below="@id/Anlage_spinner"/>
    <EditText
        android:id="@+id/editTextMenge"
        style="@style/formedittext"
        android:layout_below="@+id/Menge_label"/>

    <TextView
        android:id="@+id/Einheit_label"
        style="@style/formtextview"
        android:text="Einheit*"
        android:layout_below="@id/editTextMenge" />
    <Spinner
        android:id="@+id/Einheit_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/Einheit_label"/>


    <TextView
        android:id="@+id/textViewGBULabel"
        style="@style/formkategorie"
        android:layout_below="@id/Einheit_spinner"
        android:text="GBU/BA"/>

 <!--
    <ImageView
        android:id="@+id/imageViewMSolutions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/msolutions"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/buttonSpeichernAnlage"/>
-->
    <TextView
        android:id="@+id/Verfahren_label"
        style="@style/formtextview"
        android:text="Verfahren/Tätigkeit"
        android:layout_below="@id/textViewGBULabel"/>
    <Spinner
        android:id="@+id/Verfahren_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/Verfahren_label"/>

    <TextView
        android:id="@+id/Anwendungsbereich_label"
        style="@style/formtextview"
        android:text="Anwendungsbereich/Arbeitsplatz*"
        android:layout_below="@id/Verfahren_spinner"/>
    <Spinner
        android:id="@+id/Anwendungsbereich_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/Anwendungsbereich_label"/>


    <TextView
        android:id="@+id/textViewSubstPruefung"
        style="@style/formkategorie"
        android:layout_below="@id/Anwendungsbereich_spinner"
        android:text="Substitutionsprüfung"/>

    <TextView
        android:id="@+id/Produktkateg_label"
        style="@style/formtextview"
        android:text="Produkt Kategorie*"
        android:layout_below="@id/textViewSubstPruefung"/>
    <Spinner
        android:id="@+id/Produktkateg_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/Produktkateg_label"/>

    <TextView
        android:id="@+id/Material_label"
        style="@style/formtextview"
        android:text="Material*"
        android:layout_below="@id/Produktkateg_spinner"/>
    <Spinner
        android:id="@+id/Material_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/Material_label"/>

    <TextView
        android:id="@+id/PROC_label"
        style="@style/formtextview"
        android:text="PROC Code*"
        android:layout_below="@id/Material_spinner"/>
    <Spinner
        android:id="@+id/PROC_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/PROC_label"/>


    <TextView
        android:id="@+id/textViewEMKGHaut"
        style="@style/formkategorie"
        android:layout_below="@id/PROC_spinner"
        android:text="EMKG Kriterien-Haut"/>

    <TextView
        android:id="@+id/Wirkdauer_label"
        style="@style/formtextview"
        android:text="Wirkdauer*"
        android:layout_below="@id/textViewEMKGHaut"/>
    <Spinner
        android:id="@+id/Wirkdauer_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/Wirkdauer_label"/>

    <TextView
        android:id="@+id/Wirkfläche_label"
        style="@style/formtextview"
        android:text="Wirkfläche*"
        android:layout_below="@id/Wirkdauer_spinner"/>
    <Spinner
        android:id="@+id/Wirkflaeche_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/Wirkfläche_label"/>


    <TextView
        android:id="@+id/textViewEMKGEinatmen"
        style="@style/formkategorie"
        android:layout_below="@id/Wirkflaeche_spinner"
        android:text="EMKG Kriterien-Einatmen"/>

    <TextView
        android:id="@+id/VerwMenge_label"
        style="@style/formtextview"
        android:text="verwendete Menge*"
        android:layout_below="@id/textViewEMKGEinatmen"/>
    <Spinner
        android:id="@+id/VerwMenge_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/VerwMenge_label"/>

    <TextView
        android:id="@+id/Freisetz_label"
        style="@style/formtextview"
        android:text="Freisetzungsgruppe*"
        android:layout_below="@id/VerwMenge_spinner"/>
    <Spinner
        android:id="@+id/Freisetz_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/Freisetz_label"/>


    <TextView
        android:id="@+id/textViewEMKGBrand"
        style="@style/formkategorie"
        android:layout_below="@id/Freisetz_spinner"
        android:text="EMKG Kriterien-Brand"/>

    <TextView
        android:id="@+id/Luftversorg_label"
        style="@style/formtextview"
        android:text="Luftversorgung*"
        android:layout_below="@id/textViewEMKGBrand"/>
    <Spinner
        android:id="@+id/Luftversorg_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/Luftversorg_label"/>

    <TextView
        android:id="@+id/Häufigk_label"
        style="@style/formtextview"
        android:text="Häufigkeit*"
        android:layout_below="@id/Luftversorg_spinner"/>
    <Spinner
        android:id="@+id/Haeufigk_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/Häufigk_label"/>

    <TextView
        android:id="@+id/Staubung_label"
        style="@style/formtextview"
        android:text="Staubung"
        android:layout_below="@id/Haeufigk_spinner"/>
    <Spinner
        android:id="@+id/Staubung_spinner"
        style="@style/formspinner"
        android:layout_below="@+id/Staubung_label"/>

    <CheckBox
        android:id="@+id/abgesystem_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_marginLeft="40dp"
        android:text="Abgeschlossenes System"
        android:layout_below="@id/Staubung_spinner"/>

    <CheckBox
        android:id="@+id/brennbar_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:text="brennbar"
        android:layout_below="@id/abgesystem_checkbox"/>


    <Button
        android:id="@+id/buttonSpeichernAnlage"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/brennbar_checkbox"
        android:text="@string/speichern"
        android:textAllCaps="false"
        android:textSize="25dp" />

</RelativeLayout>
</ScrollView>
