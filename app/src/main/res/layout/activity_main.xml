<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/farbverlauf"
    tools:context="com.example.mikio.kimya_3_0_Yevlakh.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:layout_marginLeft="60dp"
        android:text="Sicherheitsdatenblatt Ã¶ffnen:"/>
    <View
        android:id="@+id/myRectangleView"
        android:layout_marginTop="75dp"
        android:layout_width="255dp"
        android:layout_height="175dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle"/>

    <Button
        android:id="@+id/buttonManuelleSuche"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:text="per manueller Stoffsuche"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonQRSearch"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/buttonManuelleSuche"
        android:layout_alignStart="@+id/buttonManuelleSuche"
        android:layout_below="@+id/buttonManuelleSuche"
        android:layout_marginTop="8dp"
        android:text="per QR-Code Scanner"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonQRGenerate"
        android:layout_width="250dp"
        android:layout_height="75dp"

        android:layout_alignLeft="@+id/buttonForm"
        android:layout_alignStart="@+id/buttonForm"
        android:layout_below="@+id/buttonQRSearch"
        android:layout_marginTop="13dp"
        android:text="QR-Code erstellen"
        android:textAllCaps="false"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonForm"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/buttonQRSearch"
        android:layout_alignStart="@+id/buttonQRSearch"
        android:layout_below="@+id/buttonQRGenerate"
        android:layout_marginTop="12dp"
        android:text="@string/neue_anwendung"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="16sp" />



</RelativeLayout>
