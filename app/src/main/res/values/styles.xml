<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorCorporate</item>
        <item name="colorPrimaryDark">@color/colorCorporate2</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/OverpassButtonStyle</item>
    </style>
    <style name="OverpassButtonStyle" parent="android:Widget.Holo.Button">
        <item name="fontFamily">@font/overpass</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="formelement" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="formtextview" parent="formelement">
        <item name="android:textSize">25dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <style name="formspinner" parent="formelement">
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="formkategorie" parent="formtextview">
        <item name="android:background">#d5d5d5</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="formedittext" parent="formelement">

    </style>

</resources>
